	public void chargeBp() {
		System.out.println("충전할 금액을 선택해주세요.");
		System.out.println("1. 1억bp(1,000원) 2. 5억bp(5,000원) 3. 10억bp(10,000원) 4. 100억bp(100,000원)");
		int bp = inputInt();
		while(true) {
			if(bp==1||bp==2||bp==3||bp==4) {
				System.out.println();
			}
		}
		
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
